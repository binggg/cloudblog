.list {
  position:relative;
}


.list-item {
    position: relative;
    display: flex;
    padding-right: 10rpx;
    height: 140rpx;
    background-color: var(--white);
    justify-content: flex-end;
    align-items: center;
    transition: all .6s ease-in-out 0s;
    transform: translateX(0rpx);
}

.list-item::after {
  content: "";
  position: absolute;
  height: 1px;
  background-color:#efefef;
  left: 146rpx;
  bottom:0;
  right: 0;
}

.list-item-icon{
  border-radius: 10rpx;
  position: absolute;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  font-size: 2em;
}


.list-item-content {
  position: absolute;
  left: 136rpx;
  width: calc(100% - 96rpx - 60rpx - 120rpx - 20rpx);
  line-height: 1.6em;
}

.list-item-name{
  font-size: 30rpx;
  color: #222;
}

.list-item-desc {
  font-size: 24rpx;
  color: #666;
}

.list-item-action {
  position:absolute;
  right: 30rpx;
  height: 96rpx;
  width: 96rpx;
  display:flex;
  align-items:center;
  justify-content:flex-end;
}

.list .arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  transform: rotate(45deg);
}

.badge {
  margin-left: 12px;
  padding: 6rpx;
}
